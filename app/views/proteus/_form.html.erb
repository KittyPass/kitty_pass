<%= form_for proteus ||= Proteus.new do |f| %>
    <% if proteus.id %>
        <%= f.label :id %>
        <%= f.text_field :id, disabled: true %>
    <% end %>

    <%= f.label :hostname %>
    <%= f.text_field :hostname %>

    <%= f.label :identifier %>
    <%= f.text_field :identifier %>

    <%= f.label :inventory_number %>
    <%= f.text_field :inventory_number %>

    <%= f.label :model %>
    <%= f.select :model_id,
                 options_from_collection_for_select(Model.all, 'id', 'name', proteus.model ? proteus.model.id : nil),
                 include_blank: true %>

    <%= f.label :status %>
    <%= f.select :status_id,
                 options_from_collection_for_select(Status.all, 'id', 'name', proteus.status ? proteus.status.id : nil),
                 include_blank: true %>

    <%= f.label :location %>
    <%= f.select :location_id,
                 options_from_collection_for_select(Location.all, 'id', 'name', proteus.location ? proteus.location
                                                                          .id : nil),
                 include_blank: true %>

    <%= f.label :ipv4_gateway %>
    <%= f.text_field :ipv4_gateway %>

    <%= f.label :ipv6_gateway %>
    <%= f.text_field :ipv6_gateway %>

    <%= f.label :root_password %>
    <%= f.text_field :root_password %>

    <%= f.submit t 'views.application.buttons.save' %>
<% end %>
