<%= form_for adonis ||= Adonis.new do |f| %>
    <% if adonis.id %>
        <%= f.label :id %>
        <%= f.text_field :id, disabled: true %>
    <% end %>

    <%= f.label :hostname %>
    <%= f.text_field :hostname %>

    <%= f.label :identifier %>
    <%= f.text_field :identifier %>

    <%= f.label :inventory_number %>
    <%= f.text_field :inventory_number %>

    <%= f.label :model %>
    <%= select_tag :model_id,
                   options_from_collection_for_select(Model.all, 'id', 'name', adonis.model ? adonis.model.id : nil),
                   include_blank: true %>

    <%= f.label :status %>
    <%= select_tag :status_id,
                   options_from_collection_for_select(Status.all, 'id', 'name', adonis.status ? adonis.status.id : nil),
                   include_blank: true %>

    <%= f.label :location %>
    <%= select_tag :location_id,
                   options_from_collection_for_select(Location.all, 'id', 'name', adonis.location ? adonis.location
                                                                          .id : nil),
                   include_blank: true %>

    <%= f.label :ipv4_gateway %>
    <%= f.text_field :ipv4_gateway %>

    <%= f.label :ipv6_gateway %>
    <%= f.text_field :ipv6_gateway %>

    <%= f.label :root_password %>
    <%= f.text_field :root_password %>

    <%= f.label :admin_password %>
    <%= f.text_field :admin_password %>

    <%= f.label :deploy_password %>
    <%= f.text_field :deploy_password %>

    <%= f.submit t 'views.application.buttons.save' %>
<% end %>
